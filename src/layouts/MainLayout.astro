---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Layout from "./Layout.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <div class="h-full bg-gray-900">
    <Header />

    <main class="h-full">
      <slot />
    </main>

    <!-- Footer -->
    <Footer />
  </div>
</Layout>
