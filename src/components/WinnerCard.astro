---
import { Image } from "astro:assets";
const { item, title, description } = Astro.props;
---

<div
  class="bg-white mx-auto grid max-w-7xl grid-cols-1 gap-x-8 gap-y-20 xl:grid-cols-3 p-12 rounded-xl"
>
  <div class="mx-auto max-w-2xl lg:mx-0">
    <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
      {title}
    </h2>
    <p class="mt-6 text-lg leading-8 text-gray-600">
      {description}
    </p>
  </div>
  <ul
    role="list"
    class="mx-auto grid max-w-2xl grid-cols-1 gap-x-6 gap-y-20 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:gap-x-8 xl:col-span-2"
  >
    <li>
      <Image
        class="aspect-[3/2] w-full rounded-2xl object-cover"
        src={item.img}
        alt=""
        width={300}
        height={300}
      />
      <h3 class="mt-6 text-lg font-semibold leading-8 text-gray-900">
        {item.name}
      </h3>
      <a
        href={item.href}
        target="_blank"
        class="text-base leading-7 text-gray-600">{item.href}</a
      >
      <p class="mt-4 text-base leading-7 text-gray-600">
        {item.description}
      </p>
    </li>
  </ul>
</div>
